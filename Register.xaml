<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Chekers.ViewModels"
             xmlns:m="clr-namespace:Chekers.Models"
             x:Class="Chekers.Register"
             x:DataType="vm:RegisterVM">
    <VerticalStackLayout Spacing="25" Margin="10">
        <Entry  Placeholder="{x:Static m:Strings.Name}" Text="{Binding Name}"/>
        <Button Text="{x:Static m:Strings.Register}" Command="{Binding RegisterCommand}" />
    </VerticalStackLayout>
</ContentPage>
